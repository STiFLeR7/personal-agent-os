# Dex - Personal AI Operator Configuration
# Copy this file to .env and update with your settings

# ============================================================================
# DEX IDENTITY & VOICE INTEGRATION
# ============================================================================
DEX_NAME=Dex
DEX_WAKE_WORD="Hey Dex"
DEX_TIME_ZONE=America/New_York
DEX_VOICE_ENABLED=false          # Set to true when Phase 3.5 voice is ready
DEX_VOICE_LANGUAGE=en-US
DEX_REMINDERS_ENABLED=true
DEX_NOTES_ENABLED=true

# ============================================================================
# LLM CONFIGURATION (for task understanding)
# ============================================================================
LLM_PROVIDER=ollama
LLM_MODEL_NAME=mistral
LLM_BASE_URL=http://localhost:11434
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=120

# ============================================================================
# NOTIFICATION CHANNELS
# ============================================================================

# Desktop Notifications (Windows Popup)
NOTIFY_DESKTOP_ENABLED=true

# Email Notifications
NOTIFY_EMAIL_ENABLED=false
NOTIFY_EMAIL_FROM=your.email@gmail.com
NOTIFY_SMTP_SERVER=smtp.gmail.com
NOTIFY_SMTP_PORT=587
NOTIFY_SMTP_PASSWORD=your_app_password_here
# For Gmail: Use App Password (not your regular password)
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Select Mail and Windows Computer
# 4. Copy the generated 16-character password

# WhatsApp Notifications (via Twilio)
NOTIFY_WHATSAPP_ENABLED=false
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_FROM=+1234567890      # Twilio's WhatsApp number (format: +1234567890)
USER_WHATSAPP_NUMBER=+9876543210      # Your WhatsApp number (format: +1234567890)
# Instructions:
# 1. Sign up at https://www.twilio.com
# 2. Get a WhatsApp-enabled phone number
# 3. Find your Account SID and Auth Token in Console Settings
# 4. Set TWILIO_WHATSAPP_FROM to the number Twilio provides
# 5. Set USER_WHATSAPP_NUMBER to your personal WhatsApp number

# ============================================================================
# TOOLS CONFIGURATION
# ============================================================================
TOOLS_GMAIL_CREDENTIALS_PATH=.agentic_os/gmail_credentials.json
TOOLS_BROWSER_EXECUTABLE=             # Leave empty to use default browser
TOOLS_BROWSER_HEADLESS=false

# ============================================================================
# LOGGING & DEBUGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=.agentic_os/logs/dex.log
LOG_INCLUDE_TIMESTAMPS=true
LOG_TRACE_DECISIONS=false            # Set to true for detailed debug logs
DEBUG_MODE=false                       # Set to true for verbose output

# ============================================================================
# AGENT BEHAVIOR
# ============================================================================
AGENT_PLANNING_DEPTH=5
AGENT_VERIFICATION_ENABLED=true
AGENT_SELF_CORRECTION_ATTEMPTS=3
AGENT_REQUEST_TIMEOUT=300
